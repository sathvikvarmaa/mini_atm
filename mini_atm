atm='''
        1.credit
        2.debit
        3.balance
    '''
name = "sathvik"
password = "sathvik123"
user_name = input("enter user name ")
passwords = input("enter password ")
amount=10000
c1 = 0
d1 = 0
credit = 0
debit =0
if user_name == name and password == passwords :
    print(atm)
    option = int(input("enter a value "))
    if option == 1:
        credit=int(input("enter amount to be credited "))
        c1=amount-credit
        print("Sucessfuly Credited \n","remaing balance: ",c1)
    elif option ==2:
        debit = int(input("enter amount to be debited "))
        d1=amount+debit
        print("Sucessfuly Debited \n","remaing balance: ",d1)
    elif option ==3:
        print("Your Current Balance \n",amount)
else:
    print("enter correct details")
